{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "routes/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "models/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "middleware/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "@database_url",
    "EMAIL": "@email",
    "EMAIL_PASSWORD": "@email_password"
  }
}

